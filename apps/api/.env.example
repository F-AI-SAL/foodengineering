# Production-safe defaults. Copy to .env.local or .env.production and fill in values.
PORT=4000
DATABASE_URL=postgresql://username:password@db-host:5432/food_engineering
CORS_ORIGIN=https://admin.example.com,https://app.example.com
WS_PATH=/ws
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1d
APP_URL=https://admin.example.com

# Uploads
STORAGE_PROVIDER=s3
# Options: s3 | cloudinary | disabled
UPLOAD_MAX_MB=10
UPLOAD_ALLOWED_MIME=image/jpeg,image/png,image/svg+xml,application/pdf
VIRUS_SCAN_ENABLED=false
VIRUS_SCAN_CMD=clamscan
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_BASE_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=food-engineering

# Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.05
REQUEST_ID_HEADER=x-request-id

# Notifications
EMAIL_PROVIDER=none
EMAIL_FROM=no-reply@foodengineering.com
NOTIFICATION_TEST_EMAIL=ops@foodengineering.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-user
SMTP_PASS=your-pass
SENDGRID_API_KEY=
WHATSAPP_PROVIDER=twilio
WHATSAPP_FROM=+14155238886
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Microservices
NOTIFICATIONS_URL=https://notifications.example.com
NOTIFICATIONS_SHARED_SECRET=
